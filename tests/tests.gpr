with "config/tests_config.gpr";
with "cortex_m.gpr";

project Tests is

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Tests_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("tests.adb");

   for Target use "arm-eabi";
   for Runtime ("Ada") use Cortex_M.ZFP_Runtime;

   package Compiler is
      for Default_Switches ("Ada") use Tests_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Tests;
